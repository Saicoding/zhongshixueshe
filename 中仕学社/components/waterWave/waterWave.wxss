.container{
    width:100%;
    height:0;
}
.ripple {
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 100%;
    height:10px;
    width:10px;
    margin-top: -90px;
    position: absolute;
    transform: scale(0);
    z-index: 10000;
}
@keyframes ripple {
    100% {
    transform: scale(12);
    background-color: transparent;
    }
}