/* pages/zixun/zixun.wxss */

.date {
  height: 70rpx;
  border-bottom: 20rpx solid #f2f2f2;
}

.date-icon, .date-day, .date-text {
  display: float;
  float: left;
}

.date-day {
  font-weight: bolder;
  margin-left: -29rpx;
  color: rgb(224, 66, 66);
  font-size: 20rpx;
  height: 70rpx;
  line-height: 80rpx;
}

.date-icon {
  height: 40rpx;
  width: 40rpx;
  margin-top: 15rpx;
  margin-left: 25rpx;
}

.date-text {
  height: 70rpx;
  font-size: 25rpx;
  margin-left: 15rpx;
  line-height: 70rpx;
  color: rgb(99, 99, 99);
}

.content {
  padding: 0rpx 20rpx 20rpx 20rpx;
}

.block {
  width: 100%;
  display: inline-flex;
  border-bottom: 1rpx solid rgb(224, 224, 224);
  padding-bottom: 30rpx;
  padding-top: 30rpx;
}

.content-image {
  width: 300rpx;
  height: 195rpx;
}

.content-text-block, .content-title, .content-info {
  width: 400rpx;
}

.content-title {
  padding: 0rpx 0rpx 30rpx 30rpx;
  font-size: 30rpx;
}

.content-info {
  padding: 0rpx 0rpx 30rpx 30rpx;
  font-size: 25rpx;
  color: rgb(116, 116, 116);
}

.load-img {
  display: block;
  width: 48rpx;
  height: 56rpx;
  margin: 200rpx auto;
}

.loading-block {
  width: 100%;
  height: 50rpx;
  font-size: 23rpx;
  line-height: 30rpx;
  margin: 0rpx auto;
  text-align: center;
  margin-bottom: 15rpx;
  color: rgb(156, 156, 156);
}

.loading-gif {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  vertical-align: middle;
}

.loading-text {
  display: inline-block;
  margin-left: 10rpx;
  vertical-align: middle;
}

.select1{
  background: rgb(218, 218, 218);
  opacity: 0.9;
}
