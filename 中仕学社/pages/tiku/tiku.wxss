/* pages/shuati/shuati.wxss */

page {
  background: white;
  -webkit-overflow-scrolling: touch;
}

/* 自定义标题栏 */

.container {
  width: 100%;
}

.imgLoading {
  margin-top: 136rpx;
}

.bars {
  position: fixed;
  display: flex;
  background: white;
  height: 40rpx;
  width: 500rpx;
  left: 10rpx;
  padding: 10rpx;
  z-index: 100;
}

.bar {
  margin-top: 25rpx;
  display: inline-block;
  text-align: center;
  padding-left:10rpx;
  padding-right:10rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #f60;
  border-radius: 50rpx;
  font-size: 25rpx;
  background: white;
  margin-left: 30rpx;
}

/* 中间条 */

.midline {
  display: flex;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #f1f5f8;
  font-size: 22rpx;
}

.midline-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 16rpx;
  background: #23cb9a;
  margin-top: 37rpx;
  margin-left: 40rpx;
}

.midline-text {
  margin-left: 20rpx;
}

.fixed {
  position: fixed;
  top: 0rpx;
  z-index: 99;
}

/* 上面部分 */

.content {
  box-shadow: 1rpx 1rpx 14rpx 7rpx rgba(8, 8, 8, 0.1);
  background: white;
}

.up {
  background: #f60;
}

.scroller {
  width: 750rpx;
  height: 100rpx;
}

.topBar-left {
  display: flex;
  width: 200rpx;
  height: 50rpx;
  border-radius: 0rpx 50rpx 50rpx 0rpx;
  line-height: 50rpx;
  color: white;
  font-size: 22rpx;
  background: linear-gradient(to right, #fc9c60, #fdbd95);
}

.topbar-left-icon {
  width: 30rpx;
  height: 30rpx;
  margin: 10rpx 20rpx 10rpx 40rpx;
}

.top {
  display: flex;
  width: 710;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background: white;
  justify-content: space-around;

}

.center-block {
  position: relative;
  z-index:20;
  width: 220rpx;
  height: 220rpx;
  border-radius: 220rpx;
  background: linear-gradient(to right, #fc9c60, #fdbd95);
  margin: 0rpx auto;
  color: white;
}

.center-text {
  display: float;
  float: left;
  width: 100%;
}


.t_left {
  display: float;
  float: left;
  width: 27%;
  height: 360rpx;
  text-align: center;
}

.t_right {
  display: float;
  float: right;
  text-align: center;
  width: 29%;
  height: 360rpx;
}

.t_center {
  position: relative;
  display: float;
  float: right;
  width: 300rpx;
  height: 360rpx;
  text-align: center;
}

.t_center_pic {
  display: flex;
  position: relative;
  top: 0rpx;
  margin: 0 auto;
  width: 220rpx;
  height: 220rpx;
  border-radius: 220rpx;
  line-height: 220rpx;
  text-align: center;
  color: white;
  justify-content: center;
  z-index: 20;
}

.t_center_pic_text1 {
  font-size: 80rpx;
}

.t_center_pic_text2 {
  font-size: 25rpx;
  line-height: 280rpx;
  margin-left: 10rpx;
}

.t_center_text {
  height:90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: rgb(77, 77, 77);
  width: 100%;
  text-align: center;
}

.wave1{
  position: absolute;
  top:90rpx;
  left:40rpx;
  width: 220rpx;
  height: 220rpx;
  border-radius: 220rpx;
  background: linear-gradient(to right, #fc9c60, #fdbd95);
  color: white;
  z-index: 19;
  text-align:center;
  animation: scaleout1 2s infinite ease-in-out;
}

.wave2{
  position: absolute;
  top:90rpx;
  left:40rpx;
  width: 220rpx;
  height: 220rpx;
  border-radius: 220rpx;
  background: linear-gradient(to right, #fc9c60, #fdbd95);
  color: white;
  z-index: 19;
  text-align:center;
  animation: scaleout2 2s infinite ease-in-out;
  animation-delay: 1s;
}

@keyframes scaleout1 {
  0% {
    transform: scale(1.0);
  }

  100% {
    transform: scale(1.2);
    opacity: 0;
  }
}

@keyframes scaleout2 {
  0% {
    transform: scale(1.0);
  }

  100% {
    transform: scale(1.2);
    opacity: 0;
  }
}

.t_text {
  width: 100%;
  font-size: 25rpx;
  text-align: center;
  margin-top: 10rpx;
  color: #a4a4a4;
}

.ti_z1 {
