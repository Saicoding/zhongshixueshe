}

.ti_img {
  width: 80rpx;
  height: 80rpx;
  margin-top: 30rpx;
}

.ti_z2 {
  width: 100%;
  height: 180rpx;
}

.ti_z3 {
  width: 100%;
  height: 180rpx;
}

.ti_z4 {
  width: 100%;
