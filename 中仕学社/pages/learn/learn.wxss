.navigator-hover {
  min-height: 300rpx;
}

.swiper {
  width: 100%;
  height: 300rpx;
}

.slide-image {
  width: 100%;
  height: 300rpx;
}

.imgLoading {
  margin-top: 136rpx;
}

.blank {
  position: fixed;
  top: 0rpx;
  width: 100%;
  background: #32d584;
  z-index: 99;
}

.title1 {
  position: fixed;
  top: 50rpx;
  color: white;
  font-size: 30rpx;
  z-index: 99;
  width: 500rpx;
  left: 250rpx;
}

/* 四个按钮 */

.bars {
  background: white;
  width: 100%;
  height: 64rpx;
  border-bottom: 2rpx solid #ddd;
  
}

.content {
  width: 750rpx;
  height: auto;
  border: 1rpx solid red;
}

.fixed {
  position: fixed;
}

.title_ci {
  line-height: 40rpx;
  margin: 4% 0;
  padding-left: 2%;
  border-left: 4px #00c843 solid;
}

.diqu {
  display: inline-block;
  font-size: 28rpx;
  color: #666;
  padding:10rpx 15rpx;
  border-radius: 10rpx;
}

.bars-huodong {
  height: 60rpx; width: 10%;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  line-height: 60rpx;
  text-align: center; margin-left: 18%; float: left; border-bottom: 2px #fff solid;
}

.bars-huodong.on {
border-bottom: 2px rgb(194, 40, 2) solid;
}

.bars-btn {
  background: white;
  color: rgb(121, 121, 121);
  border: 1rpx solid rgb(236, 236, 236);
}

.block {
  clear: both;
  width: 94%;
  padding: 4% 3%;
  border-bottom: 1rpx solid #eee;
}

.img, .right-block {
  display: float;
  float: left;
}

.right-block {
  width: 60%;
  float: right;
}

.img {
  width: 267rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.title {
  font-size: 28rpx;
  line-height: 50rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.hot {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  color: #998a8b;
  font-size: 25rpx;
}

.hot-img, hot-text, .in-line {
  display: float;
  float: left;
}

.hot-img {
  width: 40rpx;
  height: 40rpx;
}

.hot-text {
  margin-left: 50rpx;
  margin-right: 30rpx;
  color: #999;
}

.select1 {
  background: rgba(46, 46, 46, 0.1);
}
