.ditiao2 { background: #fff; padding: 4%; line-height: 46rpx;}

.bottom {
  position: fixed;
  bottom: 0rpx;
  background: #fff;
  height: 100rpx;
  width: 100%;line-height: 100rpx; border-top:1px #eee solid; 
}
.bottom-price,.bottom-buy{
  display: float;
  float:left;
}

.bottom-price{
  width:60%;
  text-align: center;
  color: #555
}
.bottom-price text {font-size:40rpx;color:#dc3f0c;}
